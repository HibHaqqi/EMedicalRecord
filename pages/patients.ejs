<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Summary</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        // Function to open the modal
        function openModal() {
            document.getElementById('modal').classList.remove('hidden');
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById('modal').classList.add('hidden');
        }

        // Function to handle form submission (for demonstration purposes)
        function handleSubmit(event) {
            event.preventDefault();
            // Here you can handle the form data, e.g., send it to your server
            const formData = new FormData(event.target);
            const patientData = Object.fromEntries(formData.entries());
            console.log(patientData); // Log the data for now
            closeModal(); // Close the modal after submission
        }
    </script>
</head>
<body class="bg-blue-100 text-blue-900">
    <header class="bg-blue-500 text-white p-4">
        <h1 class="text-3xl font-bold">Patient Summary</h1>
    </header>

    <main class="p-4">
        <div class="flex justify-between items-center mb-4">
            <input type="text" placeholder="Search..." class="border border-blue-300 rounded p-2">
            <button onclick="openModal()" class="bg-blue-500 text-white rounded px-4 py-2">Add Record</button>
        </div>

        <table class="min-w-full bg-white border border-blue-300">
            <thead>
                <tr>
                    <th class="border border-blue-300 p-2">No KTP</th>
                    <th class="border border-blue-300 p-2">Name</th>
                    <th class="border border-blue-300 p-2">Age</th>
                    <th class="border border-blue-300 p-2">Address</th>
                    <th class="border border-blue-300 p-2">Phone</th>
                    <th class="border border-blue-300 p-2">Symptoms</th>
                    <th class="border border-blue-300 p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample data row -->
                <tr>
                    <td class="border border-blue-300 p-2">35231336005990002</td>
                    <td class="border border-blue-300 p-2">Wafia</td>
                    <td class="border border-blue-300 p-2">2</td>
                    <td class="border border-blue-300 p-2">Latsari</td>
                    <td class="border border-blue-300 p-2">-</td>
                    <td class="border border-blue-300 p-2">Flu</td>
                    <td class="border border-blue-300 p-2">
                        <button class="bg-blue-500 text-white rounded px-2 py-1">Detail</button>
                    </td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </main>

    <!-- Modal for adding a new patient record -->
    <div id="modal" class="fixed inset-0 bg-gray-800 bg-opacity-50 hidden justify-center items-center">
        <div class="bg-white rounded-lg p-6 w-1/3">
            <h2 class="text-xl font-bold mb-4">Add Patient Record</h2>
            <form onsubmit="handleSubmit(event)">
                <div class="mb-4">
                    <label for="nik" class="block text-sm font-medium text-gray-700">NIK</label>
                    <input type="text" id="nik" name="nik" required class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" id="name" name="name" required class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="age" class="block text-sm font-medium text-gray-700">Age</label>
                    <input type="number" id="age" name="age" required class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
                    <input type="text" id="address" name="address" required class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
                    <input type="text" id="phone" name="phone" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="symptoms" class="block text-sm font-medium text-gray-700">Symptoms</label>
                    <input type="text" id="symptoms" name="symptoms" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="medicine" class="block text-sm font-medium text-gray-700">Medicine</label>
                    <input type="text" id="medicine" name="medicine" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="injection_date" class="block text-sm font-medium text-gray-700">Injection Date</label>
                    <input type="date" id="injection_date" name="injection_date" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="HPHT" class="block text-sm font-medium text-gray-700">HPHT</label>
                    <input type="date" id="HPHT" name="HPHT" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="pragnancy_age" class="block text-sm font-medium text-gray-700">Pregnancy Age</label>
                    <input type="number" id="pragnancy_age" name="pragnancy_age" class="border border-gray-300 rounded p-2 w-full">
                </div>
                <div class="mb-4">
                    <label for="note" class="block text-sm font-medium text-gray-700">Note</label>
                    <textarea id="note" name="note" class="border border-gray-300 rounded p-2 w-full"></textarea>
                </div>
                <div class="flex justify-end">
                    <button type="button" onclick="closeModal()" class="bg-gray-300 text-gray-700 rounded px-4 py-2 mr-2">Cancel</button>
                    <button type="submit" class="bg-blue-500 text-white rounded px-4 py-2">Add Record</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
